<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/main_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bb.newspro.ui.NewsDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_2x_dimen"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="#222"
            android:textSize="24sp"
            tools:text="title one"/>

        <TextView
            android:id="@+id/news_detail_description"
            android:layout_marginTop="@dimen/default_dimen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:lineSpacingMultiplier="1.4"
            android:paddingTop="@dimen/default_dimen"
            android:textSize="16sp"
            android:textColor="#333"

            tools:text="some really long text for the news so that it goes on to next line atleast."/>
    </LinearLayout>

</ScrollView>